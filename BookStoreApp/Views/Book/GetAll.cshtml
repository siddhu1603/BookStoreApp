@model IEnumerable<BookStoreApp.Models.Domain.Book>
@{

}
<div align="center" style="width:100%;">
    <div style="background-color: lightsteelblue; padding: 20px 40px; border-radius: 20px; width:fit-content; min-width: 60%;">

        <div>
            <div>
                <h3>BOOKS</h3>

                <table class="table table-striped table-bordered table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>ISBN</th>
                            <th>Total Pages</th>
                            <th>Genre</th>
                            <th>Author</th>
                            <th>Publisher</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.ISBN</td>
                                <td>@item.TotalPages</td>
                                <td>@item.GenreName</td>
                                <td>@item.AuthorName</td>
                                <td>@item.PublisherName</td>
                                <td style="white-space: nowrap;">
                                    <a class="btn btn-success" href="/Book/Update?id=@item.Id"><i class="bi bi-pen" title="Edit Book"></i></a>
                                    <a class="btn btn-danger" onclick="return window.confirm('Are you Sure')" href="/Book/Delete?id=@item.Id"><i class="bi bi-trash" title="Delete Book"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div style="text-align: end;">
                <a class="btn btn-secondary" href="/Book/Add">+ Add More</a>
            </div>
        </div>
    </div>
</div>
