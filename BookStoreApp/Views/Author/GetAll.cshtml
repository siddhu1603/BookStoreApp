@model IEnumerable<BookStoreApp.Models.Domain.Author>
@{

}
<div align="center" style="width:100%;">
    <div style="background-color: lightsteelblue;padding: 20px; border-radius: 20px; width:fit-content;min-width: 60%;">
        
        <div>
            <div>
                <h3>AUTHORS</h3>

                <table class="table table-striped table-bordered table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th>Author Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="white-space:nowrap;">@item.AuthorName</td>
                                <td style="white-space:nowrap;">
                                    <a class="btn btn-success" href="/Author/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a>
                                    <a class="btn btn-danger" onclick="return window.confirm('Are you Sure')" href="/Author/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div style="text-align: end;">
                <a class="btn btn-secondary" href="/Author/Add">+ Add More</a>
            </div>
        </div>
    </div>
</div>


